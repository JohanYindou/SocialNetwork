<div class="col-md-3 d-flex flex-column p-2 bg-light">
	<ul class="list-unstyled flex-grow-1 p-2">
		<li class="mb-2 p-3 d-flex justify-content-center">
			<img src="/uploads/medias/Logo_SocialNetwork.png" style="max-width: 45%; height: auto;" alt="Logo de SocialNetwork">
		</li>
	
		<a href="{{ path('app_home') }}" class="text-decoration-none">
			<li class="border rounded mb-2 p-3 d-flex align-items-center bg-white shadow-sm">
				<i class="bi bi-house-door-fill me-2"></i>
				Home
			</li>
		</a>

		<a href="{{ path('app_recherche') }}" class="text-decoration-none">
			<li class="border rounded mb-2 p-3 d-flex align-items-center bg-white shadow-sm">
				<i class="bi bi-search me-2"></i>
				Recherche
			</li>
		</a>

		{% if is_granted('IS_AUTHENTICATED_FULLY') and 'ROLE_ADMIN' in app.user.roles %}
			<a href="{{ path('admin') }}" class="text-decoration-none">
				<li class="border rounded mb-2 p-3 d-flex align-items-center bg-white shadow-sm">
					<i class="bi bi-speedometer2 me-2"></i>
					Dashboard
				</li>
			</a>
		{% endif %}

		{% if is_granted('IS_AUTHENTICATED_FULLY') %}
			<a href="{{ path('app_notifications') }}" class="text-decoration-none">
				<li class="border rounded mb-2 p-3 d-flex align-items-center bg-white shadow-sm">
					<i class="bi bi-bell-fill me-2"></i>
					Notifications
				</li>
			</a>
			<a href="{{ path('conversation_index') }}" class="text-decoration-none">
				<li class="border rounded mb-2 p-3 d-flex align-items-center bg-white shadow-sm">
					<i class="bi bi-envelope-fill me-2"></i>
					Messages
				</li>
			</a>
			<a href="{{ path('app_profil') }}" class="text-decoration-none">
				<li class="border rounded mb-2 p-3 d-flex align-items-center bg-white shadow-sm">
					<i class="bi bi-person-fill me-2"></i>
					Profil
				</li>
			</a>
			<li class="border rounded mb-2 p-3 d-flex align-items-center bg-white shadow-sm">
				<a class="btn btn-primary w-100" href="{{ path('app_new_post') }}">Poster</a>
			</li>
		{% endif %}


		<li class="border rounded mb-2 p-3 bg-white shadow-sm">
			<div class="row align-items-center">
				{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
					<div class="col-auto">
						<img src="{{ app.user.ProfilPicture }}" alt="Photo de profil" class="rounded-circle" style="width: 50px; height: 50px;">
					</div>
					<div class="col">
						<div class="dropdown">
							<a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
								<div class="me-2">
									<p class="mb-0 fw-bold">{{ app.user.nom }}</p>
									<p class="mb-0 text-muted">@{{ app.user.username }}</p>
								</div>
							</a>
							<ul class="dropdown-menu" aria-labelledby="dropdownUser">
								<li>
									<a class="dropdown-item" href="{{ path('app_logout') }}">DÃ©connexion</a>
								</li>
							</ul>
						</div>
					</div>
				{% else %}
					<div class="col-auto">
						<a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
					</div>
				{% endif %}
			</div>
		</li>
	</ul>
</div>

