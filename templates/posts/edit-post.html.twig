{% extends 'base.html.twig' %}

{% block title %}Edit Post
{% endblock %}
{% block body %}


	<div
		class="container-fluid d-flex flex-column vh-100 p-2">
		<!-- Utilisez les classes "container-fluid", "d-flex", "flex-column" et "vh-100" -->
		<div class="row flex-grow-1">
			<!-- Utilisez la classe "flex-grow-1" pour que la row prenne toute la hauteur disponible -->

			<!-- Contenu de la première colonne -->
			{% include 'components/sidebar.html.twig' %}
			<!-- Contenu de la deuxième colonne -->
				<div class="col-md-6 offset-md-3 main-content"> <h2>Editer un post</h2>
				{{ form_start(form) }}
				<div class="mb-3">
					{{ form_label(form.contenu, 'Contenu') }}
					{{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.contenu) }}
				</div>
				<div class="mb-3">
					{{ form_label(form.media, 'Media') }}
					{{ form_widget(form.media, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.media) }}
				</div>
				<button type="submit" class="btn btn-primary">Enregistrer</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>

{% endblock %}
